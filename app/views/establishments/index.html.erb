<% content_for :page_title, "Poutineer - Establishments" %>
<% content_for :page_header, "Establishments" %>
<% content_for :page_types, :splash %>

<% if notice %>
  <p id="notice">
    <%= notice %>
  </p>
<% end %>

<section class="card-deck">
  <% @records.each do |record| %>
    <section class="card">
      <% if record.photos.any? %>
        <%= image_tag(record.photos.sample, :card => "card-img-top", :height => 464) %>
      <% else %>
        <%= image_tag(image_path("missing-establishment-image.jpg"), :card => "card-img-top", :height => 464) %>
      <% end %>
      <section class="card-body">
        <header>
          <h5 class="card-title"><%= record.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Contributed by <%= record.contributors %></h6>
        </header>
        <p class="card-text">
          <%= record.menu_items.size %> menu items.
        </p>
        <%= link_to "Show", record, class: "card-link" %>
        <%= link_to "Edit", edit_establishment_path(record), class: "card-link" %>
      </section>
      <footer class="card-footer">
        <small class="text-muted">Last updated <%= time_ago_in_words(record.updated_at) %> ago</small>
      </footer>
    </section>
  <% end %>
</section>

<nav class="nav justify-content-end mt-2">
  <li class="nav-item">
    <%= link_to "Find Establishment", new_establishment_search_path, class: "nav-link link-primary" %>
  </li>
</nav>
